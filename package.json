{
  "name": "react-isomorphic-boilerplate",
  "version": "0.0.1",
  "description": "Whole bunch of config for an isomorphic React application",
  "author": "Richard Tong",
  "license": "UNLICENSED",
  "main": "webpack.config.js",
  "scripts": {
    "start": "npm-run-all --parallel server client",
    "server": "babel-watch ./src/server.jsx",
    "start-prod": "node ./dist/server.js",
    "client": "webpack --watch --progress --mode development -o public/app.bundle.js",
    "lint": "eslint --ext .jsx --ext .js ./src ./test ./webpack.config.js",
    "clean": "rm -rf ./dist",
    "build-bundle": "NODE_ENV=production webpack --progress --mode production --devtool source-map -o build/app.bundle.js",
    "build-source": "babel ./src --out-dir ./dist",
    "docker-build": "./deploy/docker-build",
    "docker-login": "./deploy/docker-login",
    "docker-push": "./deploy/docker-push",
    "docker-run-local": "./deploy/docker-run-local",
    "deploy": "npm-run-all deploy-build deploy-login deploy-push"
  },
  "repository": {
    "type": "git",
    "url": "github:richytong/react-isomorphic-boilerplate"
  },
  "dependencies": {
    "aphrodite": "^2.2.2",
    "compression": "^1.7.3",
    "express": "^4.16.3",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-helmet": "^5.2.0",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "react-waypoint": "^8.1.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "superagent": "^3.8.3",
    "url-search-params-polyfill": "^4.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.2.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "compression-webpack-plugin": "^2.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "npm-run-all": "^4.1.3",
    "webpack": "^4.15.0",
    "webpack-bundle-analyzer": "^3.0.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.4"
  }
}
